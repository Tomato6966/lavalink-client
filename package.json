{
    "name": "lavalink-client",
    "version": "2.9.3",
    "description": "Easy, flexible and feature-rich lavalink@v4 Client. Both for Beginners and Proficients. - Supports NodeLink@v3 too.",
    "keywords": [
        "advanced",
        "bot",
        "client",
        "discord",
        "lavalink",
        "lavalink-v4",
        "music",
        "typescript"
    ],
    "homepage": "https://tomato6966.github.io/lavalink-client/",
    "bugs": {
        "url": "https://github.com/tomato6966/lavalink-client/issues"
    },
    "license": "MIT",
    "author": {
        "name": "Tomato6966",
        "url": "https://github.com/tomato6966/"
    },
    "contributors": [],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/tomato6966/lavalink-client.git"
    },
    "directories": {
        "lib": "src"
    },
    "files": [
        "dist"
    ],
    "type": "module",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "require": "./dist/index.js",
            "import": "./dist/index.mjs",
            "default": "./dist/index.js"
        }
    },
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build": "tsup",
        "lint": "oxlint .",
        "lint:fix": "bun run lint -- --fix",
        "fmt": "oxfmt .",
        "test": "bun -v",
        "prepublishOnly": "bun run fmt && bun run build",
        "prepare": "bun run fmt && bun run build"
    },
    "dependencies": {
        "tslib": "^2.8.1"
    },
    "devDependencies": {
        "@types/bun": "latest",
        "oxfmt": "^0.28.0",
        "oxlint": "^1.50.0",
        "tsup": "^8.5.1",
        "typescript": "^5.9.3"
    },
    "engines": {
        "bun": ">=1.1.27"
    },
    "packageManager": "bun@1.3.9",
    "pnpm": {
        "onlyBuiltDependencies": [
            "esbuild"
        ]
    }
}
