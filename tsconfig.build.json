{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "declaration": true,
        "emitDeclarationOnly": true,
        "outDir": "./dist",
        "declarationDir": "./dist",
        "rootDir": "./src",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
    },
    "include": [
        "src"
    ]
}