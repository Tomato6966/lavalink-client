{
  "compilerOptions": {
    "lib": ["ES2022", "DOM"],
    "target": "ES2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "types": ["node", "ws"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
