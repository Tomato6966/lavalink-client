{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "lavalink-client": [
        "../src/index.ts"
      ]
    },
    "lib": [
      "ESNext",
      "DOM"
    ],
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "types": [
      "node",
      "ws"
    ]
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}